<section id="store-feature-201db67c" class="relative py-8 overflow-hidden s-block-features s-store-features md:py-16">
    <div class="absolute top-0 left-0 rounded-full opacity-20 md:w-72 md:h-72 animated-circle" style="background: linear-gradient(45deg, #fbbf24, #f59e0b); transform: translate(-50%, -50%);"></div>
    <div class="absolute bottom-0 right-0 w-56 h-56 rounded-full opacity-15 md:w-80 md:h-80 animated-circle" style="background: linear-gradient(45deg, #60a5fa, #3b82f6); transform: translate(50%, 50%);"></div>
    
    <div class="container relative z-10">
        <div class="mb-8 text-center md:mb-12">
            {% if component.name %}
                <h2 class="mb-4 text-2xl font-bold text-gray-800 md:text-3xl lg:text-4xl">{{ component.name }}</h2>
            {% endif %}
        </div>

        <div class="smart-grid features-count-{{ component.features|length }}">
            {% for feature in component.features %}
                <div class="text-center feature-item s-block--features__item hover-scale">
                    <div class="flex justify-center mb-4 feature-icon">
                        <div class="flex items-center justify-center w-16 h-16 bg-yellow-400 shadow-lg rounded-xl">
                            <i class="{{ feature.icon }} text-2xl text-gray-800"></i>
                        </div>
                    </div>
                    <h3 class="mb-3 text-lg font-semibold text-gray-800">{{ feature.title }}</h3>
                    <p class="text-sm text-gray-600">{{ feature.desc }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

